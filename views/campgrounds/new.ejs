<% include ../partials/header %>

    <div class="row">
        <h1 style="text-align:center">Create a new campground</h1>
        <div style="width:30%; margin: 35px auto;">
            <form action="/campgrounds" method="POST">
                <div class="form-group">
                    <input class="form-control" type="text" name="name" placeholder="name" autocomplete="off">
                </div>
                <div class="form-group">
                    <input class="form-control" type="number" name="price" placeholder="price" min="0.01" step="0.01">
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" name="image" placeholder="image url" autocomplete="on">
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" name="description" placeholder="description"
                        autocomplete="off">
                </div>
                <div class="form-group">
                    <input class="btn btn-primary btn-lg btn-block" type="submit">
                </div>
            </form>
            <a href="/campgrounds">Go back</a>
        </div>

    </div>

<% include ../partials/footer %>