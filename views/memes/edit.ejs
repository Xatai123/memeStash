<% include ../partials/header %>

<div class="row">
  <h1 style="text-align:center">Edit <%= meme.name %></h1>
  <div style="width:30%; margin: 35px auto;">
    <form action="/memes/<%= meme._id %>?_method=PUT" method="POST" enctype="multipart/form-data">
      <div class="form-group">
        <input class="form-control" type="text" name="name" value="<%= meme.name %>" autocomplete="off" />
      </div>
      <!-- <div class="form-group">
          <input class="form-control" type="number" name="meme[price]" value="<%= meme.price %>" min="0.01" step="0.01">
        </div> -->
      <div class="form-group">
        <label for="image">Image</label>
        <input type="file" id="image" name="image" accept="image/*">
      </div>
      <div class="form-group">
        <input class="form-control" type="text" name="description" value="<%= meme.description %>"
          autocomplete="off" />
      </div>
      <div class="form-group">
        <input class="btn btn-primary btn-lg btn-block" type="submit" />
      </div>
    </form>
    <a href="/memes">Go back</a>
  </div>
</div>

<% include ../partials/footer %>