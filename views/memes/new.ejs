<% include ../partials/header %>

<div class="row justify-content-center">
    <div class="col-12 text-center">
        <h1 class="mb-4">Create a new meme</h1>
    </div>
    <div class="col-10 col-sm-8 col-md-6 col-lg-4">
        <form action="/memes" method="POST" enctype="multipart/form-data">
            <div class="form-group">
                <input class="form-control" type="text" name="meme[name]" placeholder="name" autocomplete="off">
            </div>
            <div class="form-group">
                <label for="image">Image</label>
                <input type="file" id="image" name="image" accept="image/*" required>
            </div>
            <div class="form-group">
                <input class="form-control" type="text" name="meme[description]" placeholder="description"
                    autocomplete="off">
            </div>
            <div class="form-group">
                <button class="btn btn-lg btn-primary btn-block">Submit</button>
            </div>
        </form>
        <a class="float-left" href="/memes">Go back</a>
    </div>

</div>

<% include ../partials/footer %>