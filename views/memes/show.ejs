<% include ../partials/header %>

<div class="row">
  <div class="col-md-3">
    <p class="lead">YelpCamp</p>
    <div class="list-group">
      <li class="list-group-item active">Info</li>
      <li class="list-group-item">Info</li>
      <li class="list-group-item">Info</li>
    </div>
  </div>
  <div class="col-md-9">
    <div class="thumbnail">
      <img class="image-responsive" src="<%= meme.image %>" />
      <div class="caption">
        <!-- <h4 class="pull-right"> $<%= meme.price %>/night </h4> -->
        <h4><a><%= meme.name %></a></h4>
        <p><%= meme.description %></p>
        <p>
          <em>Submitted by: <a href="/users/<%= meme.author.id %>"><%= meme.author.username %></a>, <%= moment(meme.createdAt).fromNow() %></em>
        </p>
        <% if(currentUser && (meme.author.id.equals(currentUser._id) || currentUser.isAdmin) ){ %>
        <a class="btn btn-warning" href="/memes/<%= meme._id %>/edit">Edit</a>
        <form class="delete-form" action="/memes/<%= meme._id %>?_method=DELETE" method="POST">
          <button class="btn btn-danger">Delete</button>
        </form>
        <% } %>
      </div>
    </div>
    <div class="well">
      <div class="text-right">
        <a class="btn btn-success" href="/memes/<%= meme._id %>/comments/new">Add New Comment</a>
      </div>

      <% meme.comments.forEach(function(comment){ %>
      <hr />
      <div class="row">
        <div class="col-md-12">
          <strong><a href="/users/<%= comment.author.id %>"><%= comment.author.username %></a></strong>
          <span class="pull-right"><%= moment(comment.createdAt).fromNow() %></span>
          <p><%= comment.text %></p>
          <% if(currentUser && (comment.author.id.equals(currentUser._id) || currentUser.isAdmin)){ %>
          <a class="btn btn-xs btn-warning"
            href="/memes/<%= meme._id %>/comments/<%= comment._id %>/edit">Edit
          </a>
          <form class="delete-form"
            action="/memes/<%= meme._id %>/comments/<%= comment._id %>?_method=DELETE" method="POST">
            <input type="Submit" class="btn btn-danger btn-xs" value="Delete" />
          </form>
          <% } %>
        </div>
      </div>

      <% }) %>
    </div>
  </div>
</div>

<% include ../partials/footer %>