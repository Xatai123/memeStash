<% include ../partials/header %>


<header class="jumbotron">
    <div class="container">
        <h1>Welcome to Xatai123's MemeStash</h1>
        <p>View our hand-picked memes from all over the world</p>
        <p>
            <a class="btn btn-primary btn-lg" href="/memes/new">Add new meme</a>
        </p>
        <p>
            <form action="/memes" method="GET" class="form-inline">
                <div class="form-group">
                    <input type="text" name="search" placeholder="Meme search..." class="form-control">
                    <input type="submit" value="Search" class="btn btn-default">
                </div>
            </form>
        </p>
        <div class="container">
</header>

<div class="row text-center" style="display:flex; flex-wrap:wrap">
    <div class="col-md-12">
        <% if(noMatch.length > 1){ %>
            <h3><%= noMatch %></h3>
        <% } %>
    </div>
    <% memes.forEach(function(meme){ %>
    <div class="col-md-3 col-sm-6">
        <div class="thumbnail">
            <img src="<%= meme.image  %>">
            <div class="caption">
                <h4><%= meme.name %></h4>
            </div>
            <p>
                <a class="btn btn-primary" href="/memes/<%= meme._id%>">More info</a>
            </p>
        </div>
    </div>
    <% }) %>
</div>


<% include ../partials/footer %>