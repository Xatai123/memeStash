<% include ../partials/header %>


<header class="jumbotron">
    <div class="container text-center">
        <h1 class="display-4">Welcome to Xatai123's MemeStash</h1>
        <p class="my-3">View our hand-picked memes from all over the world</p>
        <p>
            <a class="btn btn-primary btn-lg" href="/memes/new">Add new meme</a>
        </p>
    </div>
</header>

<div class="row text-center" style="display:flex; flex-wrap:wrap">
    <div class="col-md-12">
        <% if(noMatch.length > 1){ %>
        <h3><%= noMatch %></h3>
        <% } %>
    </div>
    <% memes.forEach(function(meme){ %>
    <div class="col-lg-3 col-md-4 col-sm-6 mb-4">
        <div class="card">
            <img class="card-img-top" src="<%= meme.image  %>" alt="<%= meme.name %>">
            <div class="card-body">
                <h5 class="card-title"><%= meme.name %></h5>
                <a class="btn btn-primary" href="/memes/<%= meme._id%>">More info</a>
            </div>
        </div>
    </div>
    <% }) %>
</div>


<% include ../partials/footer %>