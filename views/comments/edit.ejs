<% include ../partials/header %>

<div class="row justify-content-center">
    <div class="col-12 text-center">
        <h1 class="mb-4">Edit Comment</h1>
    </div>
    <div class="col-10 col-sm-8 col-md-6 col-lg-4">
        <form action="/memes/<%= meme_id %>/comments/<%= comment._id%>?_method=PUT" method="POST">
            <div class="form-group">
                <input class="form-control" type="text" name="comment[text]" value="<%=comment.text%>"
                    autocomplete="off">
            </div>
            <div class="form-group">
                <input class="btn btn-primary btn-lg btn-block" type="submit">
            </div>
        </form>
        <a class="float-left" href="/memes">Go back</a>
    </div>

</div>

<% include ../partials/footer %>