<% include ../partials/header %>

<div class="row justify-content-center">
    <div class="col-12 text-center">
        <h1 class="mb-4">Add new comment to <%= meme.name %></h1>
    </div>
    <div class="col-10 col-sm-8 col-md-6 col-lg-4">
        <form action="/memes/<%= meme._id %>/comments" method="POST">
            <div class="form-group">
                <input class="form-control" type="text" name="comment[text]" placeholder="text" autocomplete="off">
            </div>
            <div class="form-group">
                <input class="btn btn-primary btn-lg btn-block" type="submit">
            </div>
        </form>
        <a class="gloat-left" href="/memes">Go back</a>
    </div>

</div>

<% include ../partials/footer %>